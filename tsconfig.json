{
  "compilerOptions": {
    "target": "es5", // This can stay as es5, but es6 is more modern and might be worth considering
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true, // Enabling strict mode can catch more errors, but might require additional type definitions
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "allowSyntheticDefaultImports": true, // Useful for compatibility with ES6 modules
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*" // use full to trigger updates 
      ]
    }
  },
  "include": [
    "next-env.d.ts", // 
    "**/*.ts",
    "**/*.tsx",
    "src/components/ProductGrid.js",
    "src/components/Layout.js",
    "src/components/VariantPicker.js",
    "src/components/Product.js",
    "src/lib/calculate-taxes.js",
    "src/hooks/useSnipcartCount.js",
    "src/context/wishlist.js",
    "src/lib/create-order.js",
    "src/lib/fetch-shipping-rates.js",
    "src/lib/printful-client.js",
    "src/pages/wishlist.js",
    "src/pages/index.js",
    "src/pages/_document.js",
    "src/pages/_app.js",
    "src/pages/api/products/[id].js",
    "src/pages/api/snipcart/shipping.js",
    "src/pages/api/snipcart/webhook.js",
    "src/pages/api/snipcart/tax.js",
    "src/pages/about.js"
  ],
  "exclude": [
    "node_modules"
  ]
}